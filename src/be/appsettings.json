{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Cors": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Serilog.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "OpenAI": {
    "ApiKey": "",
    "TimeoutSeconds": 30,
    "Voice": "marin"
  },
  "Deepgram": {
    "ApiKey": "",
    "Model": "nova-2",
    "Language": "en-US",
    "InterimResults": true,
    "Punctuate": true,
    "SampleRate": 16000
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "Model": "gpt-oss:20b",
    "TimeoutSeconds": 180,
    "Temperature": 0.1,
    "MaxTokens": 256
  },
  "SessionStorage": {
    "ConnectionString": "Data Source=/data/sessions.db;Cache=Shared;Mode=ReadWriteCreate",
    "ExpirationDays": 8
  },
  "ApplicationSettings": {
    "Version": "1.0.0",
    "ApplicationName": "HOPTranscribe API"
  },
  "AllowedOrigins": [
    "http://localhost:5173",
    "http://localhost:3000"
  ],
  "AllowedHosts": "*"
}
